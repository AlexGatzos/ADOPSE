generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id         Int      @id @default(autoincrement())
    email      String   @unique
    name       String?
    role       UserRole @relation(fields: [userRoleId], references: [id])
    userRoleId Int
}

model UserRole {
    id   Int    @id @default(autoincrement())
    name String
    users User[]
}

model Question {
    id   Int    @id @default(autoincrement())
    body String
}

model Cource {
    id   Int    @id @default(autoincrement())
    name String
}

model Exam {
    id    Int    @id @default(autoincrement())
    title String
}
